{
    "manifest_version": 3,
    "name": "Listening Buddy",
    "version": "1.0.0",
    "description": "Your AI companion for infinite context on any audio/video.",
    "permissions": [
        "sidePanel",
        "storage",
        "activeTab",
        "scripting",
        "tabCapture",
        "microphone"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "action": {
        "default_title": "Open Listening Buddy"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "content-script.js",
                "mic-frame.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-script.js"
            ],
            "run_at": "document_idle"
        }
    ]
}
